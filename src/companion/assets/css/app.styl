@import '~bootstrap/dist/css/bootstrap.css'
@import '~inspinia/css/style.css'
@import '~inspinia/styl/variables.styl'

// http://phonegap-tips.com/articles/essential-phonegap-css-webkit-tap-highlight-color.html
*
  -webkit-tap-highlight-color rgba(0,0,0,0)

// Goodness.
*, ::after, ::before
  box-sizing border-box

.modal-header.bg-primary
  background-color: $primary

//when react-fa is in use with inspinia specifically keep spans with fa
body.mini-navbar .navbar-default .nav li a span.fa {
  display: block;
}
